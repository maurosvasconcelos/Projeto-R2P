<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editar_pessoa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.projeto.Activity.MainActivity">


    <Button
        android:id="@+id/btnListar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextCpf"
        android:background="@color/lilas"
        android:fontFamily="calibri"
        android:onClick="onClick()"
        android:text="Entrar"
        android:textColor="#fafafa" />

    <EditText
        android:id="@+id/editTextCpf"
        android:layout_width="304dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="102dp"
        android:background="@color/cinza"
        android:ems="10"
        android:fontFamily="calibri"
        android:hint="Informe o CPF"
        android:inputType="number"
        android:textAlignment="center" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-89dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:fontFamily="calibri"
        android:text="Seja um participante de pesquisa do projeto Eu Ajudo a CiÃªncia."

        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/home_r2p" />

</RelativeLayout>
