<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editar_pessoa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/branco"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.r2p.Activity.Activity_inicial"
    >


    <ImageView
        android:id="@+id/projeto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:onClick="visualizarEstudos"
        app:srcCompat="@drawable/icone_projetos"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/pessoais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados Pessoais"
        android:textColor="@color/lilas"
        android:layout_below="@+id/pessoa"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/estudos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar Estudos"
        android:textColor="@color/lilas"
        android:layout_below="@+id/projeto"
        android:layout_alignStart="@+id/projeto" />

    <ImageView
        android:id="@+id/pessoa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="editarDados"
        app:srcCompat="@drawable/icone_pessoa"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        app:srcCompat="@drawable/home_r2p" />


</RelativeLayout>
